<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.pub.cs.systems.eim.practicaltest01.view.PracticalTest01MainActivity">


    <EditText
        android:id="@+id/add_number"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="7"
        android:enabled="true"
        android:gravity="center"
        android:inputType="number"
        android:saveEnabled="false" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="ADD" />

    <EditText
        android:id="@+id/str_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/add_number"
        android:ems="7"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:saveEnabled="false"
        android:layout_alignLeft="@id/add_number"
        android:layout_alignRight="@id/add_button"
        android:layout_alignEnd="@id/add_button"/>

    <Button
        android:id="@+id/compute_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/str_number"
        android:layout_alignLeft="@id/str_number"
        android:layout_below="@id/str_number"
        android:layout_marginLeft="0dp"
        android:text="COMPUTE" />

</RelativeLayout>
