<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.pub.cs.systems.eim.practicaltest01.view.PracticalTest01MainActivity">


    <EditText
        android:id="@+id/sum_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="7"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:saveEnabled="false" />

    <Button
        android:id="@+id/return_button"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/sum_text"
        android:layout_alignLeft="@id/sum_text"
        android:layout_below="@id/sum_text"
        android:layout_marginEnd="121dp"
        android:layout_marginLeft="121dp"
        android:text="RETURN" />


</RelativeLayout>
